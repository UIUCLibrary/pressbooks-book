{
    "name": "pressbooks/pressbooks-book",
    "description": "Named for Canadian academic and media theorist Marshall McLuhan, this theme is designed for academic writing but also works well for fiction. Headings are set in Cormorant Garamond, and body type is set in Lora.",
    "type": "wordpress-theme",
    "require": {
        "composer/installers": "~1.3",
        "pressbooks/mix": "^2.1"
    },
    "require-dev": {
        "humanmade/coding-standards": "^0.2.1"
    },
    "archive": {
        "exclude": [".github", ".tx", "bin"]
    },
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Pressbooks (Book Oven Inc.)",
            "email": "code@pressbooks.com"
        }
    ],
    "scripts": {
      "test": [
        "@standards"
      ],
      "standards": [
        "vendor/bin/phpcs --standard=phpcs.ruleset.xml *.php"
      ],
      "localize": [
        "wp-pot -o=languages/pressbooks-book.pot -d=pressbooks-book -t 'Pressbooks (Book Oven Inc.) <code@pressbooks.com>' -s '*.php'"
      ]
    }
}
